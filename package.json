    "@tailwindcss/typography": "^0.5.15",
    "@types/chrome": "^0.0.289",
    "@types/dom-navigation": "^1.0.5",
    "@types/react": "^19.0.2",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.19.0",
    "@typescript-eslint/parser": "^8.19.0",
